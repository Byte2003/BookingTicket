@model Promotion
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Promotion Detail</title>
	<style>
		body {
			font-family: Arial, sans-serif;
			margin: 0;
			padding: 0;
			background-color: #f8f9fa; /* Màu nền */
		}

		.container {
			max-width: 70%;
			margin: 10px auto;
			text-align: center;
			padding: 5%;
			border-radius: 10px;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		}


		.promotion {
			display: flex;
			justify-content: center;
			align-items: flex-start;
		}

		.promotion-image {
			width: 40%;
			margin-right: 20px;
		}

			.promotion-image img {
				max-width: 100%;
				height: auto;
				border-radius: 8px;
				width: 100%;
			}

		.promotion-content {
			width: 50%;
			font-size: 16px;
			line-height: 1.5;
			text-align: left; /* Chỉnh nội dung về trái */
		}

		.promotion .time{
			border-radius: 5px;
			margin-top:20px;
			border: 2px inset #b1154a;
			background-color: #dbdbd9;
			line-height: 1.5;
			font-size: 16px;
		}

		.room{
			padding: 10px;
			border: 2px dotted #b1154a;
			margin-top: 10%;
		}
		/* CSS cho lớp dx */
		.dx {
			color: #ff6600; /* Màu chữ cam */
			font-size: 18px; /* Kích thước chữ */
			font-weight: bold; /* Đậm */
			text-decoration: none; /* Không gạch chân */
			transition: color 0.3s; /* Hiệu ứng chuyển đổi màu khi hover */
		}

		/* CSS cho lớp imax */
		.imax {
			color: #9900cc; /* Màu chữ tím */
			font-size: 20px; /* Kích thước chữ */
			font-style: italic; /* Nghiêng */
			text-shadow: 2px 2px 4px #cccccc; /* Đổ bóng văn bản */
			background-image: linear-gradient(45deg, #9900cc, #cc00ff); /* Gradient màu nền */
			background-clip: text; /* Áp dụng gradient vào chữ */
			-webkit-background-clip: text; /* Áp dụng gradient vào chữ cho trình duyệt Chrome và Safari */
			color: transparent; /* Ẩn màu chữ */
		}

		/* CSS cho lớp starium */
		.starium {
			color: #009933; /* Màu chữ xanh lá cây */
			font-size: 16px; /* Kích thước chữ */
			font-weight: bold; /* Đậm */
			text-transform: uppercase; /* Chữ in hoa */
		}
		/* CSS cho lớp gold-class */
		.gold-class {
			color: #cc9900; /* Màu chữ vàng */
			font-size: 22px; /* Kích thước chữ */
			font-weight: bold; /* Đậm */
			text-transform: uppercase; /* Chữ in hoa */
		}

		/* CSS cho lớp lamour */
		.lamour {
			color: #ff3366; /* Màu chữ hồng */
			font-size: 20px; /* Kích thước chữ */
			font-weight: bold; /* Đậm */
			text-decoration: underline; /* Gạch chân */
		}

		/* CSS cho lớp sweet */
		.sweet {
			color: #993399; /* Màu chữ tím đậm */
			font-size: 18px; /* Kích thước chữ */
			font-style: italic; /* Nghiêng */
			text-shadow: 1px 1px 2px #cccccc; /* Đổ bóng văn bản */
		}

		/* CSS cho lớp premium-cinema */
		.premium-cinema {
			text-align: center;
			font-size: 20px;
			color: #2c2c2c;
			background-color: #d5d5d5;
			letter-spacing: .05em;
			text-shadow: 4px 4px 0px #d5d5d5, 7px 7px 0px rgba(0, 0, 0, 0.2);
			height: 100px;
			padding-top: 40px;
		}

		/* CSS cho lớp screenx */
		.screenx {
			font-family: cursive;
			color: #ff0000; /* Màu chữ đỏ */
			font-size: 20px; /* Kích thước chữ */
			font-weight: bold; /* Đậm */
		}

		/* CSS cho lớp cine-foret */
		.cine-foret {
			text-align: center;
			font-size: 20px;
			height: 100px;
			padding-top: 40px;
			color: #202020;
			background-color: #2d2d2d;
			letter-spacing: .1em;
			text-shadow: -1px -1px 1px #111, 2px 2px 1px #363636;
		}

		/* CSS cho lớp cine-livingroom */
		.cine-livingroom {
			font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
			text-transform: uppercase;
			text-align: center;
			font-size: 15px;
			height: 50px;
			padding-top: 40px;
			color: #131313;
			background-color: #e7e5e4;
			letter-spacing: .15em;
			text-shadow: 1px -1px 0 #767676;
		}

		/* CSS cho lớp cine-suite */
		.cine-suite {
			font-family: fantasy;
			color: #663300; /* Màu chữ nâu */
			font-size: 18px; /* Kích thước chữ */
			font-style: italic; /* Nghiêng */
		}

		.room ul {
			list-style-type: none; /* Loại bỏ dấu đầu dòng */
			padding: 0; /* Xóa padding */
			margin: 0; /* Xóa margin */
		}

		.room li {
			display: inline-block; /* Hiển thị các phần tử li trên cùng một hàng */
			margin-right: 10px; /* Khoảng cách giữa các phần tử */
		}

		.room a {
			text-decoration: none; /* Loại bỏ gạch chân */
			padding: 5px 10px; /* Kích thước padding */
			
			border-radius: 5px; /* Độ cong của góc */


		}

			.room a:hover {
				background-color: #ddd; /* Màu nền khi di chuột vào */
			}


	</style>
</head>
<body>
	<div class="container">
		<div style="margin-bottom: 20px; font-size: 26px; color: #b1154a;">
			@Model.Topic
		</div>
		

		<div class="promotion">
			<div class="promotion-image">
				<img src="@Model.ImageUrl" alt="Promotion Image">
				<div class="time">
					@Model.StartDate - @Model.EndDate
				</div>
			</div>
			<div class="promotion-content">
				@Html.Raw(Model.Content)
			</div>
		</div>
		<div class="room">
			<ul>
				<li><a class="dx" href="https://www.cgv.vn/default/theaters/special/4dx">4DX</a></li>
				<li><a class="imax" href="https://www.cgv.vn/default/theaters/special/imax">Imax</a></li>
				<li><a class="starium" href="https://www.cgv.vn/default/theaters/special/starium">Starium</a></li>
				<li><a class="gold-class" href="https://www.cgv.vn/default/theaters/special/gold-class">Goldclass</a></li>
				<li><a class="lamour" href="https://www.cgv.vn/default/theaters/special/lamour">L'amour</a></li>
				<li><a class="sweet" href="https://www.cgv.vn/default/theaters/special/sweetbox">Sweetbox</a></li>
				<li><a class="premium-cinema" href="https://www.cgv.vn/default/theaters/special/premium">Premium Cinema</a></li>
				<li><a class="screenx" href="https://www.cgv.vn/default/theaters/special/screenx">Screenx</a></li>
				<li><a class="cine-foret" href="https://www.cgv.vn/default/theaters/special/cine-foret">Cine &amp; Foret</a></li>
				<li><a class="cine-livingroom" href="https://www.cgv.vn/default/theaters/special/cine-living">Cine &amp; Living Room</a></li>
				<li><a class="cine-suite" href="https://www.cgv.vn/default/theaters/special/cine-suite">Cine Suite</a></li>
			</ul>

		</div>
	</div>
</body>
</html>
