@model SWP_BookingTicket.Utils.PaginatedList<Movie>
<div>
    <!-- Carousel Start -->
    <div>
        <div class="carousel-header">
            <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active"></li>
                    <li data-bs-target="#carouselId" data-bs-slide-to="1"></li>
                    <li data-bs-target="#carouselId" data-bs-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img src="img/carousel-2.jpg" class="img-fluid" alt="Image">
                        <div class="carousel-caption">
                            <div class="p-3" style="max-width: 900px;">
                                <h4 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">Explore The World</h4>
                                <h1 class="display-2 text-capitalize text-white mb-4">Let's The World Together!</h1>
                                <p class="mb-5 fs-5">
                                    Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                                </p>
                                <div class="d-flex align-items-center justify-content-center">
                                    <a class="btn-hover-bg btn btn-primary rounded-pill text-white py-3 px-5" href="#">Discover Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="img/carousel-1.jpg" class="img-fluid" alt="Image">
                        <div class="carousel-caption">
                            <div class="p-3" style="max-width: 900px;">
                                <h4 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">Explore The World</h4>
                                <h1 class="display-2 text-capitalize text-white mb-4">Find Your Perfect Tour At Travel</h1>
                                <p class="mb-5 fs-5">
                                    Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                                </p>
                                <div class="d-flex align-items-center justify-content-center">
                                    <a class="btn-hover-bg btn btn-primary rounded-pill text-white py-3 px-5" href="#">Discover Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="img/carousel-3.jpg" class="img-fluid" alt="Image">
                        <div class="carousel-caption">
                            <div class="p-3" style="max-width: 900px;">
                                <h4 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">Explore The World</h4>
                                <h1 class="display-2 text-capitalize text-white mb-4">You Like To Go?</h1>
                                <p class="mb-5 fs-5">
                                    Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                                </p>
                                <div class="d-flex align-items-center justify-content-center">
                                    <a class="btn-hover-bg btn btn-primary rounded-pill text-white py-3 px-5" href="#">Discover Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon btn bg-primary" aria-hidden="false"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                    <span class="carousel-control-next-icon btn bg-primary" aria-hidden="false"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <!-- Carousel End -->
    </div>
    <!-- Blog Start -->
    <div id="#movie" class="container-fluid blog py-5">
        <div class="container py-5">
            <div class="mx-auto text-center mb-5" style="max-width: 900px;">
                <h5 class="section-title px-3">Movies</h5>
                <h1 class="mb-4">Trending Movies </h1>
                <p class="mb-0">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Deleniti deserunt tenetur sapiente atque. Magni non explicabo beatae sit, vel reiciendis consectetur numquam id similique sunt error obcaecati ducimus officia maiores.
                </p>
            </div>
            <div class="row d-flex justify-content-between">
                @foreach (var movie in Model)
                {
                    <div class="col-lg-2 g-0 col-md-6">
                        <div class="blog-item d-flex justify-content-center" data-movie-id="@movie.MovieID">
                            <div class="blog-img">
                                <div class="blog-img-inner  position-relative">
                                    <img class="img-fluid" src="@movie.ImageUrl" alt="Image" style="height:355px; width:240px;">
                                    <div class="position-absolute bottom-0 start-50 translate-middle-x d-none flex-column justify-content-between w-100 btn-list-@movie.MovieID" style="background-color: rgba(0,0,0,0.6)">
                                        <div class="movie-name mx-2 my-2 d-flex justify-content-center">
                                            <h5 class="text-white">@movie.MovieName</h5>
                                        </div>  
                                        <div class="d-flex justify-content-between">
                                            <a a class="btn w-50 mx-2 my-4 text-white" style="height: 36px; background-color: #c61118">
                                                <span>Book</span>
                                            </a>
                                            <a asp-area="Customer" asp-action="MovieDetail" asp-route-movie_id = "@movie.MovieID" class="btn w-50 mx-2 my-4 text-white" style="height: 36px; background-color: #c61118">
                                                <span>View</span>
                                            </a>
                                        </div>                                 
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }
            <div class="d-flex justify-content-center align-items-center mt-5">
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   class="btn btn-primary @prevDisabled mx-2 text-white ">
                    Prev
                </a>
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   class="btn btn-primary @nextDisabled mx-2 text-white">
                    Next
                </a>
            </div>
        </div>
    </div>
    <!-- Blog End -->
</div>
@section Scripts{
    <script type="text/javascript">       
        $(".blog-item").hover(function () {
            var id = $(this).attr("data-movie-id");
            console.log(id);
            $(`.btn-list-${id}`).removeClass("d-none").addClass("d-flex");

        }, function () {
            var id = $(this).attr("data-movie-id");
            $(`.btn-list-${id}`).removeClass("d-flex").addClass("d-none");
        })

    </script>
}