@model Seat

<div class="container my-5">
    <h3 class="text-primary">New Seat</h3>
    <hr />
    <form method="post" asp-action="Create" asp-controller="Seat">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RoomID" class="form-label"></label>
                    <input asp-for="RoomID" class="form-control" value="@ViewData["room_id"]" readonly />
                    <span asp-validation-for="RoomID" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SeatName" class="form-label"></label>
                    <input asp-for="SeatName" class="form-control" />
                    <span asp-validation-for="SeatName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SeatStatus" class="form-label"></label>
                    <input type="checkbox" asp-for="SeatStatus" class="form-check-input form-control" />
                    <span asp-validation-for="SeatStatus" class="text-danger"></span>
                </div>
            </div>
            
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="Seat" asp-action="Index" class="btn btn-secondary">Back to Seat list</a>
        </div>
    </form>
</div>

@*Validate on client side*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
