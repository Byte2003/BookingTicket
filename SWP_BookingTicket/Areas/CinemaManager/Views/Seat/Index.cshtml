@model IEnumerable<Seat>

<div class="container my-5">
    <h3 class="text-primary">Manage Seat</h3>
    <hr />
    <div class="d-flex w-100 my-5 justify-content-between">
        <div class="row mb-3 p-1">
            <label class="mb-2"><strong>Select a room to manage its Seats</strong></label>
            <select id="roomSelected" asp-items="@ViewData["RoomList"] as IEnumerable<SelectListItem>" class="form-control">
                <option disabled selected value="disable_select">---Select Room---</option>
                <option value="">All Seats</option>
            </select>
        </div>
        <div>
            <a id="viewLayoutBtn" class="btn btn-success mx-2"><i class="bi bi-plus-circle"></i>Manage Seats</a>
        </div>
    </div>



    <table id="seatTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Room Name</th>
                <th>Seat ID</th>
                <th>Seat Name</th>
                <th>Seat Status</th>
            </tr>
        </thead>
    </table>
    <div class="d-flex w-100 my-5 justify-content-start error-actions">
        <a class="btn btn-outline-success mx-2" asp-area="Customer" asp-controller="Home" asp-action="Index">
            <i class="bi bi-plus-circle-dotted"></i> Back to Home
        </a>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/seatJS.js"></script>

}

